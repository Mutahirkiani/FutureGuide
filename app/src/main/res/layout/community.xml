<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:weightSum="1">


    <include
        android:id="@+id/options"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/follow"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@android:color/white"
        android:layout_alignBottom="@+id/circleImageView2"
        android:layout_alignEnd="@+id/des_University"
        android:layout_marginEnd="12dp"
        android:text="JOIN" />

    <Button
        android:id="@+id/button2"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@android:color/white"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/circleImageView2"
        android:layout_alignEnd="@+id/des_University"
        android:layout_marginEnd="12dp"
        android:text="Leave" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="0dp"
        android:textColor="@android:color/black"
        android:id="@+id/followers"
        android:layout_alignTop="@+id/circleImageView2"
        android:layout_alignStart="@+id/textView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Followers"
        android:layout_marginTop="3dp"
        android:textColor="@android:color/black"
        android:id="@+id/textView3"
        android:layout_marginStart="88dp"
        android:layout_below="@+id/followers"
        android:layout_alignStart="@+id/follow" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:id="@+id/view"
        android:layout_above="@+id/blog_list"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/name_University"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/follow"
        android:layout_alignStart="@+id/des_University"
        android:layout_alignEnd="@+id/des_University" />

    <TextView
        android:id="@+id/des_University"
        android:layout_width="350dp"
        android:textSize="11dp"

        android:gravity="fill_horizontal"
        android:textColor="@android:color/black"
        android:layout_height="50dp"
        android:layout_below="@+id/name_University"
        android:layout_centerHorizontal="true" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/university"
        android:id="@+id/circleImageView2"
        android:layout_below="@+id/options"
        android:layout_alignStart="@+id/name_University"
        android:layout_marginTop="10dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/blog_list"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />
    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle"
        android:id="@+id/imageButton"
        android:layout_gravity="right|bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/des_University"
        android:layout_marginBottom="18dp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_create_white_48dp"
        android:layout_marginTop="17dp"
        android:layout_alignTop="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_marginEnd="16dp" />
</RelativeLayout>