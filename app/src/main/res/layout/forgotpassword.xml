<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/status_appBar"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Want's to login ? "
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:id="@+id/signInPage"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14dp"/>
    </LinearLayout>

    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Send password Reset Email"
        android:id="@+id/sendMail"
        android:textColor="@android:color/white"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/login_email"
        android:layout_alignStart="@+id/login_email" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/login_email"
        android:drawableLeft="@drawable/ic_user_24dp"
        android:drawablePadding="16dp"
        android:drawableTint="@android:color/white"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/progressBar"
        android:layout_below="@+id/sendMail"
        android:layout_centerHorizontal="true"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:layout_marginTop="24dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:src="@drawable/logoapp"
        android:paddingTop="0dp"
        android:tint="@color/colorPrimaryDark"
        android:id="@+id/imageView"
        android:layout_weight="0.15"
        android:layout_below="@+id/status_appBar"
        android:layout_centerHorizontal="true" />
</RelativeLayout>