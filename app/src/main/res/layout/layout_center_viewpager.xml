<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewpager_container">


        </android.support.v4.view.ViewPager>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:id="@+id/mListView"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/listText"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:text="Select Program to Filter Universities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:textSize="16dip"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/status_appBar"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="All Recognized Universities Of Pakistan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listText"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="16dip"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/mSpinner"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mSpinner"
            android:textSize="20sp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginTop="13dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true">

        </Spinner>

    </RelativeLayout>



</merge>